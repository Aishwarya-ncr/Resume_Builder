<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity4">

    <Button
        android:id="@+id/previous1"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="13dp"
        android:background="@color/purple_500"
        android:padding="10dp"
        android:text="Previous" />


    <TextView
        android:id="@+id/dobfinal"
        android:layout_width="107dp"
        android:layout_height="35dp"
        android:layout_below="@id/showName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/dateofbirth"
        android:text="DOB"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/emailfinal"
        android:layout_width="106dp"
        android:layout_height="31dp"
        android:layout_below="@+id/dobfinal"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/email"
        android:text="email"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/addrfinal"
        android:layout_width="111dp"
        android:layout_height="34dp"
        android:layout_below="@+id/emailfinal"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/address"
        android:text="Address"
        android:textSize="18dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        tools:visibility="visible" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:visibility="visible" />

    <TextView
        android:id="@+id/Edufinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addrfinal"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="EDUCATIONAL DETAILS:"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/qualfinal"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_below="@+id/Edufinal"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/qualifications"
        android:text="Qualification"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/percentfinal"
        android:layout_width="123dp"
        android:layout_height="35dp"
        android:layout_below="@+id/qualfinal"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/percent"
        android:text="Percentage"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/clgFfnal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/percentfinal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/university"
        android:text="College/University"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/skillsetfinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clgFfnal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="29dp"
        android:text="SKILLSET:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pgmfinal"
        android:layout_width="137dp"
        android:layout_height="44dp"
        android:layout_below="@+id/skillsetfinal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/pgminglang"
        android:text="Programming Languages"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/Technologiesfinal"
        android:layout_width="129dp"
        android:layout_height="48dp"
        android:layout_below="@+id/pgmfinal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/tools"
        android:text="Technologies worked upon:"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/certificateFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Technologiesfinal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/certificate"
        android:text="Certifications"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/showDob"
        android:layout_width="169dp"
        android:layout_height="33dp"
        android:layout_alignBaseline="@id/dobfinal"
        android:layout_alignLeft="@id/showPgming"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="73dp"
        android:hint="dob" />

    <TextView
        android:id="@+id/showEmail"
        android:layout_width="266dp"
        android:layout_height="40dp"
        android:layout_above="@+id/showAddr"
        android:layout_below="@+id/showDob"
        android:layout_alignBaseline="@id/emailfinal"
        android:layout_alignLeft="@id/showPgming"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="11dp"
        android:hint="email" />

    <TextView
        android:id="@+id/showAddr"
        android:layout_width="276dp"
        android:layout_height="44dp"
        android:layout_alignBaseline="@id/addrfinal"
        android:layout_alignLeft="@id/showPgming"
        android:layout_marginLeft="4dp"
        android:hint="address" />

    <TextView
        android:id="@+id/showQual"
        android:layout_width="275dp"
        android:layout_height="34dp"
        android:layout_alignBaseline="@id/qualfinal"
        android:layout_alignLeft="@id/showPgming"
        android:layout_marginLeft="9dp"
        android:hint="qualification" />

    <TextView
        android:id="@+id/showPercent"
        android:layout_width="280dp"
        android:layout_height="44dp"
        android:layout_alignBaseline="@id/percentfinal"
        android:layout_alignLeft="@id/showPgming"
        android:layout_marginLeft="4dp"
        android:hint="percentage" />

    <TextView
        android:id="@+id/showCollege"
        android:layout_width="274dp"
        android:layout_height="55dp"
        android:layout_alignBaseline="@id/clgFfnal"
        android:layout_alignLeft="@id/showPgming"
        android:layout_marginLeft="-5dp"
        android:hint="college" />

    <TextView
        android:id="@+id/showPgming"
        android:layout_width="284dp"
        android:layout_height="44dp"
        android:layout_alignBaseline="@id/pgmfinal"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/pgmfinal"
        android:hint="programming languages" />

    <TextView
        android:id="@+id/showTools"
        android:layout_width="277dp"
        android:layout_height="48dp"
        android:layout_alignBaseline="@id/Technologiesfinal"
        android:layout_alignLeft="@id/showPgming"
        android:layout_marginLeft="4dp"
        android:hint="Tools" />

    <TextView
        android:id="@+id/showCertification"
        android:layout_width="275dp"
        android:layout_height="48dp"
        android:layout_alignBaseline="@id/certificateFinal"
        android:layout_alignLeft="@id/showTools"
        android:layout_marginLeft="2dp"
        android:hint="certification" />

    <TextView
        android:id="@+id/showName"
        android:layout_width="129dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="133dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="180dp"
        android:hint="name"
        android:textSize="30dp"
        android:textStyle="bold" />

</RelativeLayout>