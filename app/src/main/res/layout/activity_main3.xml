<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:id="@+id/skillsetdetails">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="RESUME BUILDER"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/skillset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:layout_below="@+id/welcome"
        android:text="3. TECHNICAL SKILLS"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/pgmtext"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/skillset"
        android:layout_marginStart="40dp"
        android:layout_marginTop="55dp"
        android:drawableLeft="@drawable/pgminglang"
        android:padding="10dp"
        android:text="Programming Languages"
        android:textColor="@color/white"
        android:textSize="20dp"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/pgm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/pgmtext"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/pgmtext"
        android:background="#30ffffff"
        android:ems="10"
        android:hint="Programming Languages Known"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColorHint="@color/white"
        android:textSize="10dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/toolstext"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pgmtext"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/tools"
        android:padding="10dp"
        android:text="Tools"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/toolstext"
        android:layout_alignLeft="@id/pgm"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/toolstext"
        android:background="#30ffffff"
        android:ems="10"
        android:hint="Tools worked on"
        android:inputType="textPersonName"

        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/certificationtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolstext"
        android:layout_marginStart="40dp"

        android:layout_marginTop="34dp"
        android:drawableLeft="@drawable/certificate"
        android:padding="10dp"
        android:text="Certifications"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/certifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/certificationtext"
        android:layout_alignLeft="@id/pgm"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="-39dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/certificationtext"
        android:background="#30ffffff"
        android:ems="10"
        android:hint="Certifications Obtained"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="10dp" />

    <Button
        android:id="@+id/next1"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-169dp"
        android:layout_marginBottom="193dp"
        android:layout_toStartOf="@+id/certifications"
        android:background="@android:color/holo_green_light"
        android:backgroundTint="@android:color/holo_green_light"
        android:padding="10dp"
        android:text="Next" />

    <Button
        android:id="@+id/previous1"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/next1"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="197dp"
        android:layout_toStartOf="@+id/next1"
        android:background="@color/purple_500"
        android:padding="10dp"
        android:text="Previous" />



</RelativeLayout>